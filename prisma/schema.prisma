datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                    String   @id 
  email                 String   @unique
  lastUpdated           DateTime? @default(now())
  token                 Token?
  userPlaylists         Playlist[]
  songs                 Song[]
  @@index ([email])
}

model Token {
  id                    Int     @id @default(autoincrement())
  userId                String  @unique
  token                 String  
  refreshToken          String
  expiresAt             Int 
  user                  User    @relation(fields: [userId], references: [id])
}

model Song {
  id          String  @id 
  title       String
  artists     Artist[]
  encoding    String?
  users       User[]
  playlists   Playlist[]
}

model Playlist {
  id          String  @id 
  name        String
  description String?
  songs       Song[]
  user        User    @relation(fields: [userId], references: [id])
  userId      String
  snapshotId  String
}

model Artist {
  id          String  @id 
  name        String
  songs       Song[]
}